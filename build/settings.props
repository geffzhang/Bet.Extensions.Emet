<Project>

  <PropertyGroup Label="Basic Settings">
    <VersionPrefix>2.0.0-preview1</VersionPrefix>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <SuppressNETCoreSdkPreviewMessage>true</SuppressNETCoreSdkPreviewMessage>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable>
    <NoWarn>$(NoWarn);CS1591;NU1605;</NoWarn>
  </PropertyGroup>

  <PropertyGroup Label="Ownership Settings">
    <Company>King David Consulting LLC</Company>
    <Authors>kdcllc</Authors>
    <Copyright>Copyright Â© King David Consulting LLC</Copyright>
  </PropertyGroup>

  <PropertyGroup Label="Nuget Package Settings">
    <Description>
      Rules Engine is a package for abstracting business logic/rules/policies out of the system.
      This works in a very simple way by giving you an ability to put your rules in a store outside the core logic of the system thus ensuring
      that any change in rules doesn't affect the core system.
    </Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/kdcllc/Bet.Extensions.Pravda</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kdcllc/Bet.Extensions.Pravda.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicense>https://github.com/kdcllc/Bet.Extensions.Pravda/master/LICENSE</PackageLicense>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>AspNetCore, DotNetCore, BRE, Rules Engine</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Label="SourceLink Settings">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <DebugType>Embedded</DebugType>
    <EmbedAllSources>True</EmbedAllSources>
  </PropertyGroup>
</Project>
